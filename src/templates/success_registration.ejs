<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title> <%= __('success-registration') %> | <%= HOST %></title>
</head>
<body>
<% include widgets/header.ejs %>
<div class="container">
    <div class="content d-flex justify-content-center">
        <div class="fine-wrapper bg-semi-black">
            <div class="app-title">
                <h1 class="text-center">

                    <%= __('success-registration') %>
                </h1>
            </div>
            <div class="d-flex flex-row justify-content-center text-left">
                <div class="token">
                    <span class="label">
                        <%= __('your-token') %>:
                    </span>
                    <br>
                    <span class="token highlight mt-2">
                        <%= token %>
                    </span>
                    <div class="pl-2" id="copy-token" data-token="<%= token %>">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include widgets/footer.ejs %>
</body>
</html>